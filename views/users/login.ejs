<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="row mt-3 add_listing">
                <h2 class="text_center mb-3 mt-2">Login to your account</h2>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input name="username" type="text" placeholder="Username" class="form-control" required>
                        <div class="invalid-feedback">
                            Required Field
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Create Password</label>
                        <input name="password" type="password" placeholder="Enter Password" class="form-control" required>
                        <div class="invalid-feedback">
                            Required Field
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100px;">Sign Up</button>
                </div>
            </div>
        </form>
    </body>