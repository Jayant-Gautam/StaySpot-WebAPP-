<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="dis_flex jus_cen flex_col aln_cen">
        <h2 style="align-self: flex-center;">Listing Details</h2>
        <div class="show_card card mt-3" style="width: 65vw;">
            <img src="<%= listing.image %>" class="card-img-top" alt="Location Image">
            <div class="card-body">
                <h5 class="card-title mb-3"><%= listing.title %></h5>
                <h5 class="card-subtitle mb-3 text-body-secondary">&#x20B9 <%= listing.price.toLocaleString() %>/night</h5>
                <div class="dis_flex" style="gap: 10px;">
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= listing.location %></h6>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= listing.country %></h6>
            </div>
            <p class="card-text"><%= listing.description %></p>
            <div class="dis_flex" style="gap: 10px;">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE", method="post">
                    <button type="submit" class="btn btn-danger">Delete Listing</button>
                </form>
            </div>
        </div>
    </div>
</div>
